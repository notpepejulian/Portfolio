---
import '../styles/base.css';
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Nacho Sánchez | SysAdmin</title>
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
		<style>
			body {
				background-color: #000;
				background-image: 
				radial-gradient(circle at 35% 50%, #081f12, transparent 50%),
				radial-gradient(circle at 65% 50%, #080f1f, transparent 50%), 
				radial-gradient(circle at 50% 65%, #15081f, transparent 50%);

				background-attachment: fixed;
				
				scroll-behavior: smooth;
			}
			/*.icon-hover:hover {
				box-shadow: 0 0 30px 10px rgba(17, 66, 69, 0.808);
				transition: box-shadow 0.5s ease-in-out,
			}*/
		</style>
	</head>
	<body class="text-white font-mono scrollbar-custom">

		<style>
			.header-blur-hover {
				transition: box-shadow 0.3s, background 0.3s;
			}
			.header-blur-hover:hover,
			.header-blur-hover:focus-within {
				box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.28), 0 0 40px 10px rgba(0,255,255,0.10);
				background: rgba(30, 32, 40, 0.75);
				backdrop-filter: blur(24px) saturate(1.7);
			}
			.link-blur-hover {
				transition: box-shadow 0.3s, background 0.3s;
			}
			.link-blur-hover:hover,
			.link-blur-hover:focus {
				box-shadow: 0 0 24px 6px rgba(0,255,255,0.18), 0 0 0 4px rgba(255,255,255,0.10);
				background: rgba(255,255,255,0.18) !important;
				backdrop-filter: blur(8px) saturate(1.2);
			}
		</style>
		<header class="header-blur-hover fixed top-0 left-0 w-full px-6 sm:px-10 py-3 flex justify-between items-center z-30 transition-all duration-300"
			style="backdrop-filter: blur(18px) saturate(1.5); background: rgba(30, 32, 40, 0.55); border-radius: 1.5rem; margin: 1.2rem auto 0 auto; max-width: 1100px; left: 50%; transform: translateX(-50%); box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.18); border: 1.5px solid rgba(255,255,255,0.08);">
			<div class="flex items-center space-x-3">
				<a href="../" class="link-blur-hover flex items-center justify-center w-11 h-11 rounded-full  bg-white/10 hover:bg-pink-500 hover:text-white transition-all duration-200 shadow-md hover:scale-110 border border-white/10">
					<i class="fa-solid fa-house text-white text-xl"></i>
				</a>
				<span class="ml-2 text-xl font-extrabold text-slate-100 tracking-tight select-none drop-shadow-sm" style="letter-spacing: -0.01em;">Nacho Sánchez</span>
			</div>
			<nav class="flex items-center space-x-3 sm:space-x-5">
				<a href="https://github.com/notpepejulian" target="_blank" class="link-blur-hover icon-hover flex items-center justify-center w-10 h-10 rounded-full bg-white/10 hover:bg-green-400 hover:text-white transition-all duration-200 shadow-md hover:scale-110 border border-white/10">
					<i class="fa-brands fa-github text-xl"></i>
				</a>
				<a href="https://www.linkedin.com/in/nacho-s%C3%A1nchez-garc%C3%ADa-92840327a/" target="_blank" class="link-blur-hover icon-hover flex items-center justify-center w-10 h-10 rounded-full bg-white/10 hover:bg-blue-500 hover:text-white transition-all duration-200 shadow-md hover:scale-110 border border-white/10">
					<i class="fa-brands fa-linkedin text-xl"></i>
				</a>
				<a href="mailto:nacho.sanchez@email.com" class="link-blur-hover icon-hover flex items-center justify-center w-10 h-10 rounded-full bg-white/10 hover:bg-purple-500 hover:text-white transition-all duration-200 shadow-md hover:scale-110 border border-white/10">
					<i class="fa-solid fa-envelope text-xl"></i>
				</a>
			</nav>
		</header>

		<slot />

		<footer class="w-full py-8 bg-gradient-to-t from-black/80 via-slate-900/60 to-transparent flex flex-col items-center gap-4 mt-24 border-t border-slate-800">
			<div class="flex items-center gap-3 mb-2">
				<a href="https://github.com/notpepejulian" target="_blank" aria-label="GitHub" class="icon-hover transition-transform hover:scale-110 hover:text-green-400 text-2xl">
					<i class="fa-brands fa-github"></i>
				</a>
				<a href="https://www.linkedin.com/in/nacho-sanchez" target="_blank" aria-label="LinkedIn" class="icon-hover transition-transform hover:scale-110 hover:text-blue-400 text-2xl">
					<i class="fa-brands fa-linkedin"></i>
				</a>
			</div>
			<p class="text-slate-300 text-base font-semibold tracking-wide">
				Nacho Sánchez &mdash; <span id="footer-year"></span>
			</p>
			<p class="text-slate-500 text-xs mt-1">De la terminal al cielo ☁️</p>
		</footer>
		
		<script>
			document.addEventListener('DOMContentLoaded', () => {
				const year = new Date().getFullYear();
				document.getElementById('footer-year').textContent = year;
			});
		</script>
	</body>
</html>