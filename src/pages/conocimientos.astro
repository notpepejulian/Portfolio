								Mostrando usuarios del dominio...
							</p>
							<p class="mt-4">
								<span class="text-cyan-400">nacho@windows</span>:<span class="text-yellow-400">C:\Users\Nacho</span>&gt; <span class="text-white">echo "Administrando redes con precisión"</span>
								<br>
								Administrando redes con precisión
							</p>
						</div>
					</div>
				</template>
				<style>
					.conocimiento-card.blurred {
						filter: blur(3px) grayscale(0.5) brightness(0.7);
						opacity: 0.7;
						transition: filter 0.3s, opacity 0.3s;
					}
					.conocimiento-card.focused {
						filter: none;
						opacity: 1;
						box-shadow: 0 0 0 4px #fff3, 0 8px 32px 0 rgba(0,0,0,0.25);
						z-index: 10;
						transition: box-shadow 0.3s, filter 0.3s, opacity 0.3s;
					}
					#terminal-contenedor-externo {
						min-height: 0;
						transition: min-height 0.3s;
					}
					#terminal-contenedor-externo.has-terminal{
						min-height: 160px;
					}
				</style>
				<script>
					// Solución robusta para el carrusel y el drag
					document.addEventListener('DOMContentLoaded', () => {
						const cards = document.querySelectorAll('.conocimiento-card');
						const terminalContenedor = document.getElementById('terminal-contenedor-externo');
						const carousel = document.getElementById('conocimientos-cards-carousel');
						let focusedCard = null;

						const terminalTemplates = {
							aws: document.getElementById('terminal-aws'),
							linux: document.getElementById('terminal-linux'),
							docker: document.getElementById('terminal-docker'),
							iac: document.getElementById('terminal-iac'),
							windows: document.getElementById('terminal-windows'),
							web: document.getElementById('terminal-web'),
							db: document.getElementById('terminal-db'),
						};

						function focusCard(card) {
							cards.forEach(c => {
								if (c === card) {
									c.classList.add('focused');
									c.classList.remove('blurred');
								} else {
									c.classList.remove('focused');
									c.classList.add('blurred');
								}
							});
							const terminalKey = card.getAttribute('data-terminal');
							if (terminalContenedor) {
								terminalContenedor.innerHTML = '';
							if (terminalTemplates[terminalKey]) {
								const clone = terminalTemplates[terminalKey].content.cloneNode(true);
								terminalContenedor.appendChild(clone);
									terminalContenedor.classList.add('has-terminal');
								} else {
									terminalContenedor.classList.remove('has-terminal');
								}
							}
							if (carousel && carousel.parentElement) {
								carousel.parentElement.style.minHeight = '600px';
							}
						}

						function clearFocus() {
							cards.forEach(c => {
								c.classList.remove('focused');
								c.classList.remove('blurred');
							});
							if (terminalContenedor) {
								terminalContenedor.innerHTML = '';
								terminalContenedor.classList.remove('has-terminal');
							}
							if (carousel && carousel.parentElement) {
								carousel.parentElement.style.minHeight = '';
							}
						}

						cards.forEach(card => {
							card.addEventListener('click', function(e) {
								e.preventDefault();
								if (focusedCard === this) {
									clearFocus();
									focusedCard = null;
								} else {
									focusCard(this);
									focusedCard = this;
								}
							});
						});

						// Click fuera para quitar foco
						document.addEventListener('click', function(e) {
							const target = e.target;
							const isCard = target && target.closest ? target.closest('.conocimiento-card') : null;
							const isTerminal = target && target.closest ? target.closest('#terminal-contenedor-externo') : null;
							if (!isCard && !isTerminal) {
								clearFocus();
								focusedCard = null;
							}
						});

						// Botones de flecha del carrusel
						const btnLeft = document.getElementById('carousel-left');
						const btnRight = document.getElementById('carousel-right');
						const getCardWidth = () => {
							if (!carousel) return 350;
							const firstCard = carousel.querySelector('.conocimiento-card');
							if (firstCard) {
								const style = window.getComputedStyle(firstCard);
								const margin = parseFloat(style.marginLeft) + parseFloat(style.marginRight);
								return (firstCard instanceof HTMLElement ? firstCard.offsetWidth : 350) + margin + 32;
							}
							return 350;
						};

						if (btnLeft) {
							btnLeft.addEventListener('click', (e) => {
								e.preventDefault();
								if (carousel) {
									carousel.scrollBy({ left: -getCardWidth(), behavior: 'smooth' });
								}
							});
						}
						if (btnRight) {
							btnRight.addEventListener('click', (e) => {
								e.preventDefault();
								if (carousel) {
									carousel.scrollBy({ left: getCardWidth(), behavior: 'smooth' });
								}
							});
						}

						// Drag para scroll horizontal
						let isDown = false;
						let startX = 0;
						let scrollLeft = 0;

						if (carousel) {
							carousel.addEventListener('mousedown', (e) => {
								isDown = true;
								carousel.classList.add('active');
								startX = e.pageX - carousel.offsetLeft;
								scrollLeft = carousel.scrollLeft;
							});
							carousel.addEventListener('mouseleave', () => {
								isDown = false;
								carousel.classList.remove('active');
							});
							carousel.addEventListener('mouseup', () => {
								isDown = false;
								carousel.classList.remove('active');
							});
							carousel.addEventListener('mousemove', (e) => {
								if (!isDown) return;
								e.preventDefault();
								const x = e.pageX - carousel.offsetLeft;
								const walk = (x - startX) * 1.5;
								carousel.scrollLeft = scrollLeft - walk;
							});

							// Soporte para touch
							let touchStartX = 0;
							let touchScrollLeft = 0;
							carousel.addEventListener('touchstart', (e) => {
								if (e.touches.length === 1) {
									touchStartX = e.touches[0].pageX;
									touchScrollLeft = carousel.scrollLeft;
								}
							});
							carousel.addEventListener('touchmove', (e) => {
								if (e.touches.length === 1) {
									const x = e.touches[0].pageX;
									const walk = (x - touchStartX) * 1.5;
									carousel.scrollLeft = touchScrollLeft - walk;
								}
							});
						}
					});
				</script>
				<!-- Carousel Arrows -->
				<button id="carousel-left" class="hidden md:flex absolute left-2 top-1/2 -translate-y-1/2 z-20 bg-black/60 hover:bg-cyan-500/80 text-white rounded-full w-12 h-12 items-center justify-center shadow-xl transition-all duration-300 backdrop-blur-sm border border-white/10" aria-label="Anterior" type="button">
					<i class="fa-solid fa-chevron-left text-xl"></i>
				</button>
				<button id="carousel-right" class="hidden md:flex absolute right-2 top-1/2 -translate-y-1/2 z-20 bg-black/60 hover:bg-cyan-500/80 text-white rounded-full w-12 h-12 items-center justify-center shadow-xl transition-all duration-300 backdrop-blur-sm border border-white/10" aria-label="Siguiente" type="button">
					<i class="fa-solid fa-chevron-right text-xl"></i>
				</button>
			</div>
